{
  "workspace": [
    "./lib",
    "./sample/basic"
  ],
  "tasks": {
    "build": "deno task build:lib && deno task build:sample",
    "build:lib": "cd lib && deno task build",
    "build:sample": "cd sample/basic && deno task build",
    "dev": "deno run --watch main.ts",
    "dev:sample": "cd sample/basic && deno task dev",
    "docker:basic": "docker compose --profile basic up --build",
    "docker:basic:watch": "docker compose --profile basic watch",
    "docker:down": "docker compose down"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "gl-matrix": "npm:gl-matrix@^3.4.3"
  }
}
